<div class="page-head row">

    <div class="col s6 offset-l3">
      <div class="col s10 offset-l1">
        <div class="card">
          <div class="card-content">
            <span class="card-title grey-text text-darken-4">
              <%= @student.name %> 
            </span>
            <p><%= @student.email %></p>
            <br>
            <p>Course enrollments: 
            <ul>
              <% @student.courses.each do |course| %>
                <li><%= course.name %></li>
              <% end %>
            </ul></p>
          </div>
          <div class="card-action"> 
            <% if current_user == @student %>
            <%= link_to '<i class="material-icons right">create</i> &nbsp; &nbsp; &nbsp; Edit your profile &nbsp;'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn right blue-grey z-depth-3" %>
            <br>
            <% end %>
          </div>
        </div>  <!-- card -->
      </div>
    </div>

  

</div> <!-- row -->