<div class="row">
    <div class="container">
        <div class="col s12">
            <% if @student.errors.any? %>
                <div class="card-panel red lighten-3 z-depth-2 white-text" id="fade-out1">
                
                    You encountered <%= pluralize(@student.errors.count, "error") %>
                    <ul>
                      <% @student.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                <% end %>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row center">
            <div class="col s12">
                <div class="panel card-panel blue-grey lighten-2 z-depth-4">
                    <h1 class="center-align">Sign up!</h1>
                    <div class="row">
                        <%= form_for(@student, html: {class: "col s12"}) do |f| %>
                            <div class="input-field col s12 z-depth-1">
                                <%= f.text_field :name, placeholder: "Enter your full name", autofocus: true %>
                                <%= f.label :name, class: "black-text"%>
                            </div>
                            <div class="input-field col s12 z-depth-1">
                                <%= f.text_field :email,  placeholder: "Enter your email", autofocus: true %>
                                <%= f.label :email, class: "black-text" %>
                            </div>
                            <div class="input-field col s12 z-depth-1">
                                <%= f.password_field :password,  placeholder: "Enter a password", autofocus: true %>
                                <%= f.label :password, class: "black-text" %>
                            </div>
                            <div class="input-field col s12 z-depth-1">
                                <%= f.password_field :password_confirmation,  placeholder: "Confirm password", autofocus: true %>
                                <%= f.label :password_confirmation, class: "black-text" %>
                            </div>
                            
                            <%= f.button '<i class="material-icons right">arrow_forward</i> Submit'.html_safe, class: "waves-effect waves-light btn right blue-grey z-depth-3" %>
                            
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- row -->