<h1 class="page-head center-align">Available courses</h1>

<div class="row">
  <% @courses.each do |course| %>
  
    <div class="col s6">
      <div class="col s10 offset-l1">
        <div class="card">
          <div class="card-image waves-effect waves-block waves-light">
            <%= image_tag "tut.png", size: "244", class: "activator" %>
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4">
              <%= course.short %> 
              <i class="material-icons right">more_vert</i>
            </span>
          </div>
          <div class="card-reveal grey lighten-1">
            <span class="card-title grey-text text-darken-4"><%= course.name %><i class="material-icons right">close</i></span>
            <p><%= course.description %></p>
          </div>
          <div class="card sticky-action">
            <div class="card-action"> 
              <p>
                <% if logged_in? && !(current_user.courses.include?(course)) %>
                  <%= link_to "Enroll", course_enroll_path(course_id: course.id), method: :post, class: "deep-orange-text" %>
                <% end %>
                <a href="#" class="deep-orange-text">Info</a>
              </p> 
            </div>
          </div>
        </div>
      </div>
    </div>
    
  
  <% end %>
  
</div> <!-- row -->